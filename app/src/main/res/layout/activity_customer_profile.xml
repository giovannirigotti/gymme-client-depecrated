<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.CustomerProfileActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_customer_profile_nome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nome" />

                        <TextView
                            android:id="@+id/tv_customer_profile_cognome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cognome" />

                        <TextView
                            android:id="@+id/tv_customer_profile_altezza"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Altezza" />

                        <TextView
                            android:id="@+id/tv_customer_profile_nascita"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nascita" />

                        <TextView
                            android:id="@+id/tv_customer_profile_email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email" />

                        <Button
                            android:id="@+id/btn_customer_profile_email"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:text="Aggiorna Email" />

                        <TextView
                            android:id="@+id/tv_customer_profile_allergie"
                            android:layout_width="283dp"
                            android:layout_height="91dp"
                            android:text="Allergie" />

                        <Button
                            android:id="@+id/btn_customer_profile_allergie"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:text="Aggiorna Allergie" />

                        <TextView
                            android:id="@+id/tv_customer_profile_disturbi"
                            android:layout_width="282dp"
                            android:layout_height="91dp"
                            android:text="Disturbi" />

                        <Button
                            android:id="@+id/btn_customer_profile_disturbi"
                            android:layout_width="200dp"
                            android:layout_height="45dp"
                            android:text="Aggiorna Disturbi" />

                        <Button
                            android:id="@+id/btn_customer_profile_password"
                            android:layout_width="123dp"
                            android:layout_height="63dp"
                            android:text="Aggiorna Password" />

                        <Button
                            android:id="@+id/btn_customer_profile_logout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logout" />

                </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>